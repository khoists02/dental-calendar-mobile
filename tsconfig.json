{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "jsx": "react",
    "rootDir": "src",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "moduleResolution": "Node"
  },
  "filesGlob": [
    "typings/index.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "node_modules/typescript/lib/lib.es6.d.ts"
  ],
  "include": [
    ".eslintrc.js",
    "src",
  ],
  "types": [
    "react",
    "react-dom",
    "react-native"
  ],
  // Any js files or folders that you want typescript to ignore can be added here.
  "exclude": [
    "build",
    "node_modules",
    "jest.config.js",
    "index.js",
    "babel.config.js",
    "metro.config.js"
  ],
  "compileOnSave": false,
  "extends": "expo/tsconfig.base"
}
